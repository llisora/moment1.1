<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moment 1</title>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="header">
            <img src="./logo.png" alt="Start" width="170" height="100">
            <div class="date">
                @{
                    var date = DateTime.Now.ToShortDateString();
                }
                <p>Dagens datum är @date </p>
            </div>
        </div>
    </header>

    <main>
        <div class="left">
            <ul>
                <li>
                    <a href="/Index">Start</a>
                </li>
                <li>
                    <a href="/Razor">Razor</a>
                </li>
                <li>
                    <a href="/About">Om Sidan</a>
                </li>
            </ul>
        </div>
        <div class="right">
            @RenderBody()
        </div>
    </main>

    <footer>
        Av Lisa Bäcklin - Kontakta mig via e-post: liba2103@student.miun.se
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>